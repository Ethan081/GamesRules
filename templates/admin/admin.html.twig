{% extends'base.html.twig' %}
{% block title %}Admin{% endblock %}
{% block main %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message  }}
        </div>
    {% endfor %}
    <div class="admin-sm">
        <section>
            <div class="container">
                <article class="row d-flex justify-content-center">
                    {% for game in games %}
                        <div class="card m-3 bg-dark text-white">
                        <img class="card-img-top p-2" src="{{ asset('assets/img/pictures') }}/{{ game.picture }}" alt="">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ game.title }}</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-dark"><a class="btn btn-primary btn-lg btn-block  mt-2" href="{{ path('games_show', {id:game.id}) }}" role="button">Voir</a>
                            <li class="list-group-item bg-dark"><a class="btn btn-secondary btn-lg btn-block  mt-2" href="{{ path('game_edit', {id:game.id}) }}" role="button">Modifier</a>
                            <li class="list-group-item bg-dark">
                                <form method="post" action="{{ path('game_remove', {id:game.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce jeux ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger btn-lg btn-block">Supprimer</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                    {% endfor %}
                </article>
                <div class="d-flex justify-content-center mt-3">
                    <a class="btn btn-success btn-lg btn-block " href="{{ path('game_create')}}">Ajouter un Jeux</a>
                </div>
            </div>
        </section>

    </div>
    <div class="admin-lg">
        <div class="container d-flex justify-content-center">
            <div class="games-list ">
                {% for game in games %}
                    <div class="row d-flex justify-content-around align-items-center">
                        <div class="col-2 col-lg-2 ">
                            <img  src="{{ asset('assets/img/pictures') }}/{{ game.picture }}" alt="Card image cap" class="resp img-game-admin ">
                        </div>
                        <div class="col-4 col-lg-4 align-items-center">
                            {{ game.title }}
                        </div>
                        <div class="col-2 col-lg-2">
                            <a class="btn btn-primary" href="{{ path('games_show', {id:game.id}) }}">Voir</a>
                        </div>
                        <div class="col-2 col-lg-2">
                            <a class="btn btn-secondary" href="{{ path('game_edit', {id:game.id}) }}">Modifier</a>
                        </div>
                        <div class="col-2 col-lg-2">
                            <form method="post" action="{{ path('game_remove', {id:game.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce jeux ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
        <div class="col-12 col-lg-12 d-flex justify-content-center m-4">
            <a class="btn btn-primary btn-block btn-lg" href="{{ path('game_create')}}">Ajouter un Jeux</a>
        </div>
    </div>
{% endblock %}
