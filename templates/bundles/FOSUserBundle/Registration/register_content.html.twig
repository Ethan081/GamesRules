{% trans_default_domain 'FOSUserBundle' %}
{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}
<div class="wrapper">
    <form action="" class="form-signin">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, { 'attr': {'class': 'pure-form'}}) }}


        {{ form_label(form.username, 'Username') }}
        {{ form_widget(form.username) }}

        {{ form_label(form.plainPassword.first, 'Password') }}
        {{ form_widget(form.plainPassword.first) }}

        {{ form_label(form.plainPassword.second, 'Confirm Password') }}
        {{ form_widget(form.plainPassword.second) }}

        <div>
            <input class="btn btn-success btn-lg btn-block" type="submit" value="Enregistrer" />
        </div>

        {{ form_end(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    </form>
</div>