{% extends 'base.html.twig' %}

{% block title %}Contact Game Rules{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <article id="game-form" class="row d-flex justify-content-center">
                <div class="col-12 col-lg-8 text-center my-5" >
                    <h1>Contacter Game Rules</h1>
                </div>
                <div class="col-12 col-lg-8 my-5" >
                    {{ form_start(contactForm) }}

                    {{ form_row(contactForm.firstname) }}
                    {{ form_row(contactForm.lastname) }}
                    {{ form_row(contactForm.phone) }}
                    {{ form_row(contactForm.email) }}
                    {{ form_row(contactForm.message) }}

                    <button type="submit" class="btn btn-success btn-block btn-lg">Envoyer</button>

                    {{ form_end(contactForm) }}
                </div>
            </article>
        <div/>
    </section>

{% endblock %}
