{% extends 'base.html.twig' %}

{% block title %}Game Rules{% endblock %}
{% form_theme gameForm 'bootstrap_4_layout.html.twig' %}

{% block main %}
    <section>
        <div class="container">
            <article id="game-form" class="row d-flex justify-content-center">
                <div class="col-12 text-center my-5" >
                    {% if editMode %}
                        <h1>Modifier un Jeux</h1>
                    {% else %}
                        <h1>Ajouter un Jeux</h1>
                    {% endif %}
                </div>
                <div class="col-12 my-5" >
                    {{ form_start(gameForm) }}

                    {{ form_row(gameForm.title, {'attr': {'placeholder': 'Nom du jeux'}}) }}
                    {{ form_row(gameForm.publisher) }}
                    {{ form_row(gameForm.category) }}
                    {{ form_row(gameForm.description, {'attr': {'placeholder': 'Description du jeux'}}) }}
                    {{ form_row(gameForm.imageFile) }}
                    {{ form_row(gameForm.rule, {'attr': {'placeholder': 'http://....'}})  }}

                    <button type="submit" class="btn btn-success btn-block btn-lg">
                        {% if editMode %}
                            Modifier
                        {% else %}
                            Ajouter
                        {% endif %}
                    </button>

                    {{ form_end(gameForm) }}
                </div>
            </article>
        <div/>

    </section>

{% endblock %}
