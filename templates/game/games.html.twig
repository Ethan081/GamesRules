{% extends 'base.html.twig' %}

{% block title %}All Games{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <article class="row d-flex justify-content-center">
                <div class="col-12 text-center my-5" >
                    <h3>Tous les jeux disponibles</h3>
                </div>
                <div class="row d-flex justify-content-center">
                    {% for game in games%}
                        <div class="card bg-secondary col-5 col-lg-3 m-2 p-2">
                            <img class="card-img-top rounded" src="{{ asset('assets/img/pictures') }}/{{ game.picture }}" alt="Card image cap">
                            <a class="btn btn-secondary  mt-2" href="{{ path('games_show', {'id': game.id}) }}" role="button">{{ game.title }}</a>
                        </div>
                    {% endfor %}
                </div>
            </article>
        </div>
    </section>
{% endblock %}
