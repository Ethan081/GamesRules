{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block main %}
    <section>
        <h1>Resultat de la recherche</h1>
        <article class="card-show">
            {% for elem in gameTitle %}
                <div class="card">
                    <img src="{{ asset('assets/img/pictures') }}/{{ elem.picture }}" alt="" class="resp">
                    <div class="container">
                        <a href="{{ path('games_show', {'id': elem.id}) }}"><h4><b>{{ elem.title }}</b></h4></a>
                    </div>
                </div>
            {% endfor %}
        </article>
    </section>
{% endblock %}