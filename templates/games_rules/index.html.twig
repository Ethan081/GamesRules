{% extends 'base.html.twig' %}

{% block title %}Games Rules{% endblock %}

{% block main %}
<main>
    <container >
        <article class="row search-box" >
            <div class="col-12 col-lg-12 d-flex justify-content-center" >
                <h1>Quelle règle de jeu cherchez-vous?</h1>
            </div>
            <div class="col-12 col-lg-12 d-flex justify-content-center search-bar" >
                <form class="form-inline " action="{{ path('games_search') }}" method="get">
                    <div class="input-group">
                        <input class="form-control " type="text" placeholder="Titre du jeu..." name="title">
                        <button type="button"  class="btn btn-success" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </article>
    </container>
    <section>
        <article class="row d-flex justify-content-start m-4">
            <div class="col-12 col-lg-12 article-text" >
                <h2>Derniere Règle de jeux ajoutees</h2>
            </div>
            {% for game in games|slice(-4) %}
                <div class="card col-8 col-lg-3">
                    <img class="card-img-top" src="{{ asset('assets/img/pictures') }}/{{ game.picture }}" alt="Card image cap">
                    <div class="card-body">
                        <a href="{{ path('games_show', {'id': game.id}) }}"><h4>{{ game.title }}</h4></a>
                    </div>
                </div>
            {% endfor %}
        </article>
    </section>
</main>
{% endblock %}
