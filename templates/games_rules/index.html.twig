{% extends 'base.html.twig' %}

{% block title %}Hello GamesRulesController!{% endblock %}

{% block main %}
<main>
    <container class="row justify-content-center" style="border:1px solid black;">
        <section >
            <article class="row justify-content-center" style="border:1px solid red; text-align: center;">
                <div class="col-12 col-lg-12" style="border:1px solid blue;">
                    <h1>Quel regle de jeux cherchez-vous?</h1>
                </div>
                <div class="col-12 col-lg-12" style="border:1px solid green; text-align: center;">
                    <form class="form-inline my-2 my-lg-0" action="{{ path('games_search') }}" method="get">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" name="title" aria-label="Search">
                        <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </article>
        </section>
    </container>
    <section class="row justify-content-center">
        <div class="col-12 col-md-6" style="text-align: center;">
            <h1>derniere Regle de jeux ajoutees</h1>
        </div>
        <article class="card-show">
            {% for game in games|slice(-4) %}
            <div class="col-12 col-md-6">
                <div class="card">
                    <img src="{{ asset('assets/img/pictures') }}/{{ game.picture }}" alt="" class="resp">
                    <div class="container">
                        <a href="{{ path('games_show', {'id': game.id}) }}"><h4><b>{{ game.title }}</b></h4></a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </article>
    </section>
</main>
{% endblock %}
